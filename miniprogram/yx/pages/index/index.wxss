.selection{
  border-bottom: 6px solid #ddd;
}
.header{
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: limegreen;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 10px;
  margin-bottom: 1px;
}
.text-all{
  color: greenyellow;
  font-size: 10px;
}
.content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.content-item{
  height: 300rpx;
  width: 45%;
  background-color: white;
  margin: 5px;  
  position: relative;
}
.content-item image{
  width: 100%;
  height: 85%;
}
.content-item-text{
  position: absolute;
  bottom: 0px;
  color: red;
  font-size: 10px;
  background: -webkit-linear-gradient(bottom,rgba(211, 211, 211, 0.5),rgba(211, 211, 211, 0));
  height:10px;
  width:97%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-top: 1%;
  padding-left: 2%;
  padding-right: 1%;
  padding-bottom: 2%;
}
.list-items{
  height: 600rpx;
  width: 100%;
  margin-left: 0.1%;  
}
.list-item-images{
  height: 400rpx;
  width: 100%;
  position: relative;
}
.list-item-images-img{
  height: 100%;
  width: 100%;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -50rpx;
  right: 60rpx;
}
.list-item-text{
  height: 200rpx;
  width: 96%;
  margin-top: 20rpx;
  padding-left: 2%;
  padding-right: 2%;
}
.list-item-text-content{
  font-size: 10px;
  color: #999;
  margin-top: 20rpx;
}