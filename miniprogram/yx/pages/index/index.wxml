<!--index.wxml-->
<view class="container">
  
  <view class="selection">
    <swiper indicator-dots="true"
      autoplay="true" interval="3000" duration="1000">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="150"/>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class='selection'>
    <view class='header'>
      <text>精品推荐</text>
      <text class='text-all'>全部精品</text>
    </view>

    <view class='content'>

      <view class='content-item' wx:for="{{contentItems}}">
        <image src='../../images/img1.png'></image>
        <view class='content-item-text'>
          <text>[精品]3D打印机速溶咖啡</text>
        </view>
      </view>
    </view>
  </view>

  <view class='selection'>
    <view class='header'>
      <text>热门评测</text>
      <text class='text-all'>全部评测</text>
    </view>

    <view class='list-items' wx:for="{{listItems}}">

      <view class='list-item-images'>
        <image src='../../images/img1.png' class='list-item-images-img'></image>
        <image src='../../images/avatar.png' class='avatar'></image>
      </view>
      <view class='list-item-text'>
        <view class='list-item-text-title'>
          <text>标题1</text>
        </view>
        <view class='list-item-text-content'>
          <text>内容1内容1内容1内容1内容1内容1内容1内容1内容1内容1内容1内容1容1内容1内容1内容1内容1内容1内容1</text>
        </view>
      </view>
    </view>
  </view>

</view>
