<template name="future-item">
  <view class='future-item'>
    <view>{{item.date}}</view>
    <view>白天:<image style="width:60rpx;height:30rpx;" src="{{item.dayPictureUrl}}" mode="aspectFill"></image></view>
    <view>夜间:<image style="width:60rpx;height:30rpx;" src="{{item.nightPictureUrl}}" mode="aspectFill"></image></view>
    <view>{{item.temperature}}</view>
    <view>{{item.weather}}</view>
    <view>{{item.wind}}</view>
  </view>
</template>